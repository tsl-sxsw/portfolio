<div class="navbar navbar-inverse navbar-static-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a href="/projects" class="brand">MY STUFFS</a>
    </div>
  </div>
</div>

<div id="portfolio">
  <div class="container">
    <div class="section_header">
      <h3>Portfolio</h3>
    </div>
    <div class="row">
      <div class="span12">
        <div id="filters_container">
          <ul id="filters">
            <li><a href="#" data-filter="*" class="active">All</a></li>
            <li class="separator">/</li>
            <li><a href="#" data-filter=".art">Art</a></li>
            <li class="separator">/</li>
            <li><a href="#" data-filter=".illustration">Illustration</li>
            <li class="separator">/</li>
            <li><a href="#" data-filter=".print">Print</a></li>
            <li class="separator">/</li>
            <li><a href="#" data-filter=".web">Web</a></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="span12">
        <div id="gallery_container">
          <% @projects.each do |project| %>
          <div class="<%= project.tags %>">
            <img src="/assets/<%= project.image_1 %>" />
            <a href="/projects/<%= project.id %>" class="mask">
              <h3><%= project.title %></h3>
              <small><%= project.tags %></small>
              <div class="more">+</div>
            </a>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
